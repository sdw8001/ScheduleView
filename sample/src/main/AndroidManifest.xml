<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.sdw8001.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScheduleViewActivity"
            android:label="@string/schedule_view_activity_name"
            android:theme="@style/Theme.BluePink.Light.NoActionBar"></activity>
        <activity
            android:name=".ViewGroupActivity"
            android:label="@string/title_activity_view_group"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>